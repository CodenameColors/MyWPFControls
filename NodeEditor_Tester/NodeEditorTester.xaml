<Window x:Class="NodeEditor_Tester.NodeEditorTester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodeEditor_Tester"
				xmlns:ne="clr-namespace:NodeEditor;assembly=NodeEditor"
        mc:Ignorable="d" Background="Black"
				Loaded="Window_Loaded"	
        Title="MainWindow" Height="450" Width="800">
	<Grid HorizontalAlignment="Left" VerticalAlignment="Top">
		<TextBlock Text="Node Editor:" Foreground="White"/>
		<ne:NodeEditor x:Name="NodeEditor" Margin="10,27,0,0" HorizontalAlignment="Left" Width="772" Height="347" VerticalAlignment="Top" BorderBrush="#FFBDBDBD" BorderThickness="2"/>


		<Button x:Name="BaseNode_BTN" Margin="383,379,306,-32" Content="Add Node" Click="BaseNode_BTN_Click"/>
	</Grid>
</Window>
