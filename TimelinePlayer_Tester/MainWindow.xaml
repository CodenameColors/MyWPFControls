<Window x:Class="TimelinePlayer_Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:Tline="clr-namespace:TimelinePlayer;assembly=TimelinePlayer"
        xmlns:local="clr-namespace:TimelinePlayer_Tester"
        mc:Ignorable="d"
				Background="Black"
        Title="MainWindow" Height="378.883" Width="800" Loaded="Window_Loaded">
	<Grid >
		<Tline:TimelinePlayer x:Name="Timeline" ItemsSource="{Binding Titles}" Height="284" VerticalAlignment="Top" TimeWidth="60" Margin="0,40,90,0">

		</Tline:TimelinePlayer>
		<Button x:Name="AddItem_BTN" Content="Add item" HorizontalAlignment="Left" Margin="707,318,0,0" VerticalAlignment="Top" Width="75" Click="AddItem_BTN_Click"/>
	</Grid>
</Window>
